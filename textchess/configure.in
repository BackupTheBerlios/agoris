AC_INIT(src/textchess.cc)
AM_INIT_AUTOMAKE(textchess, 0.0.1)
AM_MAINTAINER_MODE
AM_ACLOCAL_INCLUDE(macros)
AM_CONFIG_HEADER(config.h)

dnl Checks for programs.
AC_PROG_CXX
AC_PROG_CC

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(sys/time.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_TIME

dnl #### Check for AGORIS ###################################################
AC_CHECK_PROGS(AGORIS, agoris-config, no)
if test $AGORIS = "no"; then
        echo "You need to have agoris-config in your PATH"
        exit 1
fi

LIBS="$LIBS `agoris-config --libs`"
AGORIS_LIBS="`agoris-config --libs`"
AGORIS_CFLAGS="`agoris-config --cflags`"

AC_SUBST(AGORIS_LIBS)
AC_SUBST(AGORIS_CFLAGS)

dnl ########################################################################

AC_OUTPUT([Makefile
	       macros/Makefile
           src/Makefile])
